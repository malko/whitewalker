$border-radius=.3em;
$fg=#333;

@css{
@-moz-keyframes spin { 100% { -moz-transform: rotate(360deg); } }
@-webkit-keyframes spin { 100% { -webkit-transform: rotate(360deg); } }
@keyframes spin { 100% { -webkit-transform: rotate(360deg); transform:rotate(360deg); } }
}

body{
	font-size:.675em;
	font-family:Sans Serif;
	color:#333;
}

ul{
	list-style-type:none;
	padding:0;
	display:flex;
	flex-direction:column;
	//border-spacing: 0 .1em;
	//background:#888;
	width: 80%;
	margin:auto;
	//border:solid $fg 1px;
}

li > div{
	font-size:1.1rem;
	flex:1;
	display:flex;
	flex-direction:row;
	border:solid $fg 1px;
	margin-bottom:.1em;
	border-radius:$border-radius;
	padding:.2em .4em;

}
li[class*=status] > div:before{
	display:inline-block;
	font-size:1.25rem;
	width:1em;
	height:1em;
	line-height:1em;
	margin-top:.33em;
}
li.status-unknown > div, li.status-unknown > pre{ background:#fafafa; }
li.status-ok > div, li.status-ok> pre{ background:#dfd; }
li.status-ok > div:before{
	color: #080;
	content:"\2714";
}
li.status-running > div, li.status-running > pre{ background:#ddf; }
li.status-running > div:before{
	color:#008;
	content:"↻";

	-webkit-animation:spin 2s linear infinite;
	-moz-animation:spin 2s linear infinite;
	animation:spin 2s linear infinite;
}
li.status-failed > div, li.status-failed > pre{ background:#fdd; }
li.status-failed > div:before{
	color:#800;
	content:"✗";
}

pre{
	border:solid #333 1px;
	border-top:none;
	background:#eee;
	width:98%;
	margin:-.15em auto 1em auto;
	position:relative;
	top:-1px;
	border-bottom-right-radius:$border-radius*2;
	border-bottom-left-radius:$border-radius*2;
	max-height:200px;
	overflow:auto;
	padding:.4em .8em;
}


li > div > span{
	padding:.2em .8em;
	line-height:1.5rem
	display:inline-block;
	vertical-align:middle;
	&.name{
		flex:1;
	}
	&.datetime, &.duration{
		font-size:.8rem;
	}
}

button{
	border: 1px solid #333;
	border-radius:.2em;
	box-shadow: 1px 1px 1px #333;
	color:#333;
	background:#ddd;
}
button:hover{
	background:#eee;
}
button:focus{
	background:#eee;
	outline:none;
	box-shadow: 1px 1px 1px #A83;
}
button:active{
	background:#eee;
	box-shadow:none;
}
